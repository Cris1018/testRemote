<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LogOrRegister">

    <Button
            android:text="register"
            android:layout_width="85dp"
            android:layout_height="45dp" android:id="@+id/buttonReg"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.752"
            android:background="#ffffff"
            android:onClick="Register"/>
    <Button
            android:text="sign in"
            android:layout_width="85dp"
            android:layout_height="45dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/buttonSig"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.6"
            android:background="#ffffff" android:textColorLink="#FFFFFF"
            android:onClick="SignIn"
            android:textColorHighlight="#FFFFFF"/>

    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:alpha="0.2"
        android:background="#ffffff"
        android:ems="10"
        android:inputType="textPassword"
        android:textAppearance="@color/colorPrimaryDark"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.419" />

    <EditText
        android:id="@+id/usernameInput"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:alpha="0.2"
        android:background="#ffffff"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textAppearance="@color/colorPrimaryDark"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.277" />

    <TextView
            android:text="Username"
            android:textColor="#000000"
            android:layout_width="85dp"
            android:layout_height="22dp" android:id="@+id/UsernameText1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.168"
            app:layout_constraintVertical_bias="0.284" android:textSize="18sp"
            android:textAlignment="center"
            android:gravity="center_horizontal"/>
    <TextView
            android:text="Password"
            android:textColor="#000000"
            android:layout_width="85dp"
            android:layout_height="22dp" android:id="@+id/PasswordText1"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.168" app:layout_constraintVertical_bias="0.425"
            android:textSize="18sp"
            android:textAlignment="center"
            android:gravity="center_horizontal"/>

</androidx.constraintlayout.widget.ConstraintLayout>